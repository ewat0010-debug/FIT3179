{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "NSW Secondary Schools & Train Stations",
  "width": 1000,
  "height": 600,
  "config": {
    "background": "#e6f2ff",
    "view": {"stroke": null}
  },
  "projection": {
    "type": "equirectangular",
    "center": [151.2, -33.9],
    "scale": 38000,
    "translate": [800, 300]
  },
  "layer": [
    {
      "data": {
        "url": "data/NSW_Graticule.json",
        "format": { "type": "topojson", "feature": "ne_110m_graticules_30" }
      },
      "mark": {
        "type": "geoshape",
        "stroke": "#c7c7c7",
        "strokeWidth": 0.6,
        "fill": null
      }
    },
    {
      "data": {
        "url": "data/NSW_Graticule.json",
        "format": { "type": "topojson", "feature": "STE_2021_AUST_GDA94" }
      },
      "mark": {
        "type": "geoshape",
        "fill": "#f9f9f9",
        "stroke": "#666666",
        "strokeWidth": 1.2
      }
    },
    {
      "data": { "url": "data/stationentrances.csv" },
      "mark": {
        "type": "point",
        "shape": "triangle-up",
        "tooltip": { "content": "data" }
      },
      "encoding": {
        "longitude": { "field": "LONG", "type": "quantitative" },
        "latitude": { "field": "LAT", "type": "quantitative" },
        "size": { "value": 40 },
        "color": { "value": "#1f78b4" }
      }
    },
    {
      "data": { "url": "data/schools.csv" },
      "transform": [
        { "filter": "datum.Level_of_schooling == 'Secondary School'" }
      ],
      "mark": { "type": "circle", "tooltip": { "content": "data" } },
      "encoding": {
        "longitude": { "field": "Longitude", "type": "quantitative" },
        "latitude": { "field": "Latitude", "type": "quantitative" },
        "size": {
          "field": "latest_year_enrolment_FTE",
          "type": "quantitative",
          "title": "Enrolments",
          "scale": { "domain": [100, 2000] }
        },
        "color": {
          "field": "Level_of_schooling",
          "type": "nominal",
          "title": "School Level"
        }
      }
    }
  ]
}

